@model ProductViewModel

<div>
    <div class="card" style="background-color:antiquewhite;">
        <img class="card-img-top" src="@Model.PictureUrl" alt="Product image" height="300">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-3">
                @Model.Product.Name
            </h5>
            <div>Category: @Model.Product.CategoryId </div>

            <p>
                <span class="card-title mb-3 text-primary">Description: @Model.Product.Description</span>
            </p>
            <div class="d-flex">
                <div class="left col-md-6 col-lg-6 col-sm-6">
                    <h6 class="card-text text-danger">Price: @Model.Product.PriceOut</h6>
                </div>
                <div class="right col-md-6 col-lg-6 col-sm-6">
                    <a asp-action="Details" class="btn btn-success btn-sm" asp-route-id="@Model.Product.Id">info</a>
                    <a asp-action="AddToCart" asp-controller="Products" class="btn btn-warning btn-sm" asp-route-id="@Model.Product.Id" >add to cart</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function myClick(event){
        var btn = event.target;
        btn.disabled = !btn.disabled;
    }
    //@*onclick="myClick(event)"*@


</script>