@model IEnumerable<iShop.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="width:100%;height:100%;overflow:scroll;display:flex;flex-wrap:wrap;" class="d-flex">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-lg-4 col-sm-2 mb-3 px-2 align-items-stretch">
            <div class="card" style="background-color:antiquewhite;">
                <img class="card-img-top" src="data:image/png;base64," alt="Avatar" height="300">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mb-3">
                        Category: @item.CategoryId Product: @item.Name
                    </h5>

                    <p>
                        <span class="card-title mb-3">Description: @item.Description</span>
                    </p>

                    <h6 class="card-text text-danger">Price: @item.PriceOut</h6>
                </div>
            </div>
        </div>
    }
</div>
